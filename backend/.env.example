NODE_ENV=development
PORT=4000
HOST=127.0.0.1

# Runtime profile
RUNTIME_MODE=full

# Database (Postgres)
DATABASE_URL=postgresql://taskflow:taskflow@localhost:5432/taskflow

# Vector DB
CHROMA_HOST=localhost
CHROMA_PORT=8000

# RAG
RAG_ENABLED=true
RAG_DEFAULT_COLLECTION=pdf_chunks
RAG_TOP_K=6
RAG_ADVANCED_ENABLED=false
RAG_ADVANCED_QUERY_REWRITE=true
RAG_ADVANCED_MAX_QUERIES=3
RAG_ADVANCED_INITIAL_K=30
RAG_ADVANCED_RETRIEVAL_STRATEGY=mmr
RAG_ADVANCED_MMR_LAMBDA=0.7
RAG_ADVANCED_COMPRESSION_ENABLED=true

# LLM provider
LLM_DEFAULT_PROVIDER=ollama
LLM_DEFAULT_MODEL=llama3.2:latest
LLM_OLLAMA_ENABLED=true
OLLAMA_BASE_URL=http://localhost:11434

# Optional Google/Gemini (OpenAI-compatible endpoint)
LLM_GOOGLE_ENABLED=false
LLM_GOOGLE_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai
GOOGLE_API_KEY=

# MCP connectors (required in RUNTIME_MODE=full)
MCP_NOTION_ENABLED=true
NOTION_MCP_URL=https://mcp.notion.com/mcp
NOTION_MCP_OAUTH_ENABLED=true
NOTION_MCP_OAUTH_REDIRECT_URL=http://localhost:4000/api/mcp/notion/oauth/callback
NOTION_MCP_OAUTH_CLIENT_NAME=EM TaskFlow AI
NOTION_MCP_OAUTH_SCOPE=
NOTION_API_KEY=

MCP_GITHUB_ENABLED=true
GITHUB_MCP_URL=https://api.githubcopilot.com/mcp/
GITHUB_MCP_OAUTH_ENABLED=true
GITHUB_MCP_OAUTH_REDIRECT_URL=http://localhost:4000/api/mcp/github/oauth/callback
GITHUB_MCP_OAUTH_CLIENT_NAME=EM TaskFlow AI
GITHUB_MCP_OAUTH_SCOPE=
GITHUB_MCP_OAUTH_CLIENT_ID=
GITHUB_MCP_OAUTH_CLIENT_SECRET=
GITHUB_TOKEN=
